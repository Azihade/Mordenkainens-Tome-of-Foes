AddRacialVariant("eladrin elf", "season autumn", {
		regExpSearch : /autumn/i,
		name : "Autumn Eladrin Elf",
		source : ["MToF", 61],
		trait : desc([
			"Eladrin, Autumn (+2 Dexterity, +1 Intelligence or Charisma)",
			"Trance: Elves don't need to sleep, but meditate semiconsciously, for 4 hours a day. This gives the same benefit as a human gets from 8 hours of sleep (long rest only 4 hours).",
			"Fey Step: Once per short rest, as a bonus action, I can magically teleport up to 30 ft to an unoccupied space I can see.",
			"At 3rd Level, Fey Step causes 2 creatures within 10ft to make a Wisdom Save or be charmed for 1 minute.",
			]),
		eval : "RemoveAction('bonus action', 'Fey Step'); AddAction('bonus action', 'Fey Step (Autumn)', 'Autumn Eladrin Elf')",
		removeeval : "RemoveAction('bonus action', 'Fey Step (Autumn)'); AddAction('bonus action', 'Fey Step', 'Eladrin Elf')"		
});
